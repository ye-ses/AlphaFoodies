@model IEnumerable<AlphaFoodies.Models.MenuItem>

@{
    ViewBag.Title = "ViewMenu";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
    <link href="~/Content/Admin.css" rel="stylesheet" />
}
<h2>ViewMenu</h2>
<div class="view_menu_container">
    @foreach (var menuItem in Model)
    {
        var image_Source = string.Format("data:image/gif;base64,{0}", Convert.ToBase64String(menuItem.Picture));
        var alt_Text = menuItem.Item_Name;
        if (menuItem.Picture != null)
        {
            <div class="card" style="width: 20rem; margin-right:10px;">
                <img class="card-img-top" src="@image_Source" alt="@alt_Text" width="100%" height="200px" />
                <div class="card-body">
                    <h5 class="card-title text-center bol">@menuItem.Item_Name</h5>

                    <p class="card-text">@menuItem.Description</p>
                    <div class="bottom">
                        @*<i class='bx bxs-trash-alt' id="trash_icon"></i>*@
                        <input type="button" class="btn btn-danger" style="border-radius:23px;width:100px" value="delete" onclick="createModal('@Url.Action("deleteMenuItem", "Admin" , new {id=menuItem.Item_Code})')" />
                        <input type="button" class="btn btn-success" style="border-radius:23px;width:100px" value="Edit" onclick="createModal('@Url.Action("deleteMenuItem", "Admin" , new {id=menuItem.Item_Code})')" />
                    </div>
                </div>
            </div>
        }
    }
</div>
<div class="modal fade" id="myModal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false" >
    <div class="modal-dialog">
        <div class="modal-content" id="modelContent">
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script> @*/*Lib*/*@
    <script>
    function createModal(url){
          $('#modelContent').load(url);
          $('#myModal').modal('show');
    }
    </script>
}