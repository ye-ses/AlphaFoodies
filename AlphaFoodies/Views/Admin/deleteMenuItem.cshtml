@model AlphaFoodies.Models.MenuItem

<h3 class="confirm-delete-title">Are you sure you want to delete this?</h3>
<div>

        <h4 class="confirm-delete-ItemName">@Model.Item_Name</h4>
        <div class="modal-body">
            <dl class="dl-horizontal">

                @if (Model.Picture != null)
                {
                    var image_Source = string.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.Picture));

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>

                    <dd>
                        <p><span style="line-height:27px;">R</span>@Html.DisplayFor(model=>model.Price)</p>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Category)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Picture)
                    </dt>

                    <dd>
                        <img src="@image_Source" width="200px" height="200px" />
                    </dd>
                }
            </dl>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default"
                    data-dismiss="modal" style="border-radius:23px;width:100px">
                Cancel
            </button>
            @using (Html.BeginForm("deleteMenuItem", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                   <input id="deleteItem"type="submit" style="border-radius:23px;width:100px" value="Confirm" class="btn btn-danger" data-model-id="@Model.Item_Code"/>
                </div>
            }
            </div>   
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
