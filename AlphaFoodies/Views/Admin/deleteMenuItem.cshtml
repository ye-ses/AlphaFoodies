@model AlphaFoodies.Models.MenuItem

<h3>Are you sure you want to delete this?</h3>
<div>

        <h4>@Model.Item_Name</h4>
        <div class="modal-body">
            <dl class="dl-horizontal">

                @if (Model.Picture != null)
                {
                    var image_Source = string.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.Picture));

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Price)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Category)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Picture)
                    </dt>

                    <dd>
                        <img src="@image_Source" width="200px" height="200px" />
                    </dd>
                }
            </dl>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default"
                    data-dismiss="modal">
                Cancel
            </button>
            @using (Html.BeginForm("deleteMenuItem", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    | <input id="deleteItem"type="submit" value="Delete" class="btn btn-danger" data-dismiss="modal" data-model-id="@Model.Item_Code"/>
                </div>
            }
            </div>
    
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $("deleteItem").click(
            new function () {
                var item_Code = $(this).data("model-id");
                $.ajax({
                    url: "/Admin/deleteMenuItemPost"+ item_Code,
                    type: "Post",
                }).done(new function () {
                    alert("a menu item is successfully deleted")
                });
            }).ajaxError(new function () {
                alert("Failed to remove an item")
            });
    </script>
}
